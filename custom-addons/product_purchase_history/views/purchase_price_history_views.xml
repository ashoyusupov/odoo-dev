<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_price_history_view_tree" model="ir.ui.view">
        <field name="name">purchase.price.history.tree</field>
        <field name="model">purchase.price.history</field>
        <field name="arch" type="xml">
            <tree string="Purchase Price History">
                <field name="product_tmpl_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="order_id"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="purchase_price_history_view_form" model="ir.ui.view">
        <field name="name">purchase.price.history.form</field>
        <field name="model">purchase.price.history</field>
        <field name="arch" type="xml">
            <form string="Purchase Price History">
                <sheet>
                    <group>
                        <field name="product_tmpl_id"/>
                        <field name="partner_id"/>
                        <field name="date"/>
                        <field name="order_id"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>